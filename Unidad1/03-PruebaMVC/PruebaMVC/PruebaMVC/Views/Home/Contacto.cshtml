<button type="button" class="btn btn-primary" onclick="mostrarToast()">Mostar Toast</button>

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11;">
    <div id="miToast" class="toast">
        <div class="toast-header">
            <strong class="me-auto">Mensaje Enviado</strong>
            <small>Hace unos instantes</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body">
            El mensaje fue enviado a Juan Perez.
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function mostrarToast(){
            const ejemploToast = document.getElementById("miToast");
            const toast =  new bootstrap.Toast(ejemploToast);
            toast.show();
        }
    </script>
}